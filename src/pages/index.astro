---
import { getEntry, getCollection, type CollectionEntry } from "astro:content";
import Layout from "../layouts/Layout.astro";
import {
  ArrowRight,
  Mail,
  BookOpen,
  ChevronRight,
  FolderGit,
  Trophy,
  Linkedin,
  ChevronLeft,
  Quote,
} from "lucide-astro";
import DynamicIcon from "../components/DynamicIcon.astro";
import { Image } from "astro:assets";
import { getProjectTimestamps } from "../utils/projectFileMetadata";

const resumeData = await getEntry("resume", "main");
const projectEntries = await getCollection("projects");
const publications = await getCollection("publications");
const siteOrigin = Astro.site?.origin ?? "https://parijatkhan.in";
const homeDescription =
  resumeData?.data.header.summary ??
  "Solution Designer and full-stack engineer building resilient systems.";
const homepageStructuredData = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: `${resumeData?.data.header.name ?? "Parijat Khan"} Portfolio`,
    url: siteOrigin,
    description: homeDescription,
    about: resumeData?.data.header.specialization,
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Home",
        item: siteOrigin,
      },
    ],
  },
];

type ProjectWithDates = CollectionEntry<"projects"> & {
  publishedAt: Date;
  updatedAt: Date;
};

const projectsWithDates: ProjectWithDates[] = await Promise.all(
  projectEntries.map(async (project) => ({
    ...project,
    ...(await getProjectTimestamps(project.id)),
  }))
);

const featuredProjects = projectsWithDates
  .filter((p) => p.data.featured)
  .sort((a, b) => b.publishedAt.getTime() - a.publishedAt.getTime())
  .slice(0, 3);

const hasHighlights =
  resumeData?.data.careerHighlights &&
  resumeData.data.careerHighlights.length > 0;
const hasAwards = resumeData?.data.awards && resumeData.data.awards.length > 0;
const hasRecommendations =
  resumeData?.data.recommendations &&
  resumeData.data.recommendations.length > 0;
const hasProjects = featuredProjects.length > 0;
const hasPublications = publications && publications.length > 0;
const specialization = resumeData?.data.header.specialization;

const images = import.meta.glob("../assets/**/*.{jpg,jpeg,png,webp}", {
  eager: true,
});
const profilePhoto = resumeData?.data.header.photoUrl
  ? (images[resumeData?.data.header.photoUrl.replace("~/", "../")] as {
      default: ImageMetadata;
    })
  : null;
---

<Layout
  title="Home"
  currentPath="/"
  description={homeDescription}
  additionalStructuredData={homepageStructuredData}
>
  <div class="animate-in fade-in duration-500">
    {/* Hero Section */}
    <div class="bg-slate-900 text-white pt-20 pb-24 md:pt-32 md:pb-40 px-4">
      <div class="max-w-5xl mx-auto text-center">
        {
          profilePhoto && (
            <div class="mb-8">
              <Image
                src={profilePhoto?.default}
                alt={resumeData?.data.header.name ?? "Profile Photo"}
                class="w-32 h-32 md:w-40 md:h-40 rounded-full mx-auto border-4 border-indigo-500/30 shadow-2xl object-cover"
              />
            </div>
          )
        }
        <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6">
          Hi, I'm <span class="text-indigo-400"
            >{resumeData?.data.header.name}</span
          >
        </h1>
        <p
          class="text-xl md:text-2xl text-slate-300 max-w-3xl mx-auto mb-10 leading-relaxed"
        >
          {resumeData?.data.header.title}
          {specialization ? <> specializing in {specialization}.</> : "."}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/cv"
            class="px-8 py-4 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-lg transition-all flex items-center justify-center gap-2"
          >
            View Full CV <ArrowRight size={20} />
          </a>
          <button
            id="home-contact-trigger"
            class="px-8 py-4 bg-transparent border-2 border-slate-600 hover:border-white text-white font-bold rounded-lg transition-all flex items-center justify-center gap-2"
          >
            Get In Touch <Mail size={20} />
          </button>
        </div>
      </div>
    </div>

    {/* Highlights Section */}
    {
      hasHighlights && (
        <div class="bg-white py-20 px-4">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
              <h2 class="text-3xl font-bold text-slate-900">
                Career Highlights
              </h2>
              <div class="w-20 h-1 bg-indigo-500 mx-auto mt-4" />
            </div>

            <div class="grid gap-8 grid-cols-[repeat(auto-fit,minmax(240px,1fr))]">
              {resumeData?.data.careerHighlights?.map((highlight) => (
                <div class="p-8 bg-slate-50 rounded-xl border border-slate-100 shadow-sm hover:shadow-md transition-shadow">
                  {highlight.icon && (
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-6">
                      <DynamicIcon
                        name={highlight.icon}
                        class="text-indigo-600"
                        size={24}
                      />
                    </div>
                  )}
                  <h3 class="text-xl font-bold text-slate-900 mb-3">
                    {highlight.title}
                  </h3>
                  <p class="text-slate-600 leading-relaxed text-sm">
                    {highlight.description}
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>
      )
    }

    {/* Honors & Awards Section */}
    {
      hasAwards && (
        <div class="bg-slate-50 py-20 px-4">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
              <h2 class="text-3xl font-bold text-slate-900">Honors & Awards</h2>
              <div class="w-20 h-1 bg-indigo-500 mx-auto mt-4" />
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              {resumeData?.data.awards.map((award, idx) => (
                <div class="flex items-start gap-4 p-6 bg-white rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-shadow">
                  <div class="p-3 bg-indigo-50 rounded-full text-indigo-600 shrink-0">
                    <Trophy size={24} />
                  </div>
                  <div>
                    <h3 class="font-bold text-slate-900 text-lg leading-tight mb-1">
                      {award.title}
                    </h3>
                    <p class="text-slate-600 text-sm font-medium">
                      {award.issuer}
                    </p>
                    <p class="text-slate-400 text-xs mt-1 font-semibold">
                      {award.year}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      )
    }

    {/* Featured Projects Highlight */}
    {
      hasProjects && (
        <div class="bg-slate-50 py-20 px-4">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-slate-900">
                Featured Projects
              </h2>
              <div class="w-20 h-1 bg-indigo-500 mt-4 mx-auto" />
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {featuredProjects.map((project) => (
                  <a
                    href={`/projects/${project.id}`}
                    class="block bg-white p-6 rounded-xl border border-slate-200 shadow-sm hover:shadow-md transition-all hover:-translate-y-1 group"
                  >
                    <div class="flex justify-between items-start mb-3">
                      <FolderGit
                        size={24}
                        class="text-indigo-600 group-hover:scale-110 transition-transform"
                      />
                    </div>
                    <h3 class="font-bold text-slate-900 text-lg mb-2 group-hover:text-indigo-600 transition-colors">
                      {project.data.name}
                    </h3>
                    <p class="text-xs font-bold text-indigo-600 font-mono mb-3">
                      {project.data.tech.join(", ")}
                    </p>
                    {project.data.description && (
                      <p class="text-slate-600 text-sm leading-relaxed mb-4 line-clamp-3">
                        {project.data.description}
                      </p>
                    )}
                  </a>
                ))}
            </div>

            <div class="text-center mt-10">
              <a
                href="/projects"
                class="text-indigo-600 font-bold hover:text-indigo-800 inline-flex items-center gap-1 group"
              >
                View All Projects{" "}
                <ChevronRight
                  size={20}
                  class="transform group-hover:translate-x-1 transition-transform"
                />
              </a>
            </div>
          </div>
        </div>
      )
    }

    {/* Featured Research Highlight */}
    {
      hasPublications && (
        <div class="bg-white py-20 px-4">
          <div class="max-w-7xl mx-auto">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4">
              <div>
                <h2 class="text-3xl font-bold text-slate-900">
                  Selected Research
                </h2>
                <div class="w-20 h-1 bg-indigo-500 mt-4" />
              </div>
              <a
                href="/research"
                class="text-indigo-600 font-bold hover:text-indigo-800 flex items-center gap-1 group"
              >
                View All Publications{" "}
                <ChevronRight
                  size={20}
                  class="transform group-hover:translate-x-1 transition-transform"
                />
              </a>
            </div>

            <div class="space-y-4">
              {publications
                .filter((p: { data: { featured: boolean } }) => p.data.featured)
                .slice(0, 3)
                .map(
                  (pub: {
                    id: any;
                    data: { title: string; publisher: string; year: number };
                  }) => (
                    <a
                      href={`/research/${pub.id}`}
                      class="flex flex-col md:flex-row justify-between items-start md:items-center p-6 bg-slate-50 rounded-xl border border-slate-100 hover:border-indigo-200 transition-colors group"
                    >
                      <div class="grow pr-4">
                        <h3 class="font-bold text-slate-900 text-lg mb-1 group-hover:text-indigo-600 transition-colors">
                          {pub.data.title}
                        </h3>
                        <div class="flex items-center gap-2 text-slate-600 text-sm italic">
                          <BookOpen size={16} />
                          <span>{pub.data.publisher}</span>
                        </div>
                      </div>
                      <div class="mt-4 md:mt-0 flex items-center gap-4 min-w-fit">
                        <span class="font-bold text-slate-400">
                          {pub.data.year}
                        </span>
                        <span class="text-indigo-600 font-medium text-sm flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                          View Details <ChevronRight size={16} />
                        </span>
                      </div>
                    </a>
                  )
                )}
            </div>
          </div>
        </div>
      )
    }

    {/* Recommendations Section */}
    {
      hasRecommendations && (
        <div class="bg-slate-900 text-white py-20 px-4 relative group">
          <div class="max-w-7xl mx-auto relative">
            <div class="text-center mb-16">
              <h2 class="text-3xl font-bold text-white flex items-center justify-center gap-3">
                Recommendations
              </h2>
              <div class="w-20 h-1 bg-indigo-500 mx-auto mt-4" />
            </div>

            {/* Scrollable Carousel Container */}
            <div class="relative">
              <div class="flex overflow-x-auto gap-6 pb-8 snap-x snap-mandatory recommendations-scroll px-4 md:px-0">
                {resumeData?.data.recommendations.map((rec, idx) => (
                  <div class="w-[85vw] md:w-100 shrink-0 snap-center bg-slate-800 p-8 rounded-xl relative border border-slate-700 hover:border-slate-600 transition-colors">
                    <Quote
                      class="absolute top-6 left-6 text-slate-600 opacity-25"
                      size={40}
                    />
                    <p class="text-slate-300 italic mb-6 relative z-10 pt-4 leading-relaxed line-clamp-6 min-h-36">
                      "{rec.text}"
                    </p>
                    <div class="flex items-center gap-3">
                      <div class="w-10 h-10 bg-indigo-500 rounded-full flex items-center justify-center font-bold text-white">
                        {rec.author.charAt(0)}
                      </div>
                      <div>
                        <div class="font-bold text-white text-sm">
                          {rec.author}
                        </div>
                        <div class="text-indigo-300 text-xs">{rec.role}</div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <div class="text-center mt-8">
              <a
                href={resumeData?.data.header.linkedin}
                target="_blank"
                rel="noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 bg-[#0077b5] hover:bg-[#006097] text-white font-bold rounded-lg transition-all shadow-lg hover:shadow-xl"
              >
                <Linkedin size={20} />
                View all on LinkedIn
              </a>
            </div>
          </div>
        </div>
      )
    }
  </div>

  <script>
    // Trigger contact modal from home hero
    document
      .getElementById("home-contact-trigger")
      ?.addEventListener("click", () => {
        const modal = document.getElementById("contact-modal");
        if (modal) modal.classList.replace("hidden", "flex");
      });
  </script>
</Layout>
