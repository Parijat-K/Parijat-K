---
import { getCollection, getEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import {
  Printer,
  MapPin,
  Mail,
  Phone,
  Linkedin,
  Github,
  Globe,
  Briefcase,
  Cpu,
  FolderGit,
  ExternalLink,
  BookOpen,
  GraduationCap,
  Award,
  Trophy,
} from "lucide-astro";

const resumeData = await getEntry("resume", "main");
const projects = await getCollection("projects");
const publications = await getCollection("publications");

const hasAdditionalTitles =
  resumeData?.data.header.additionalTitles &&
  resumeData?.data.header.additionalTitles.length > 0;
const hasAwards = resumeData?.data.awards && resumeData.data.awards.length > 0;
const hasProjects = projects && projects.length > 0;
const hasPublications = publications && publications.length > 0;
---

<Layout title="Resume" currentPath="/cv">
  <div
    class="bg-white p-4 md:p-8 animate-in slide-in-from-bottom-4 duration-500 print:p-0"
  >
    {/* Floating Print Button - Visible only on screen */}
    <button
      onclick="window.print()"
      class="fixed bottom-8 right-8 z-50 flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-full shadow-lg hover:bg-indigo-700 hover:shadow-xl transition-all transform hover:-translate-y-1 print:hidden font-bold"
      title="Print or Save as PDF"
    >
      <Printer size={20} />
      <span class="hidden md:inline">Print CV</span>
    </button>

    <div
      class="max-w-[210mm] mx-auto bg-white shadow-2xl overflow-hidden print:shadow-none print:max-w-none print:m-0 flex flex-col min-h-[297mm]"
    >
      {/* HEADER */}
      <header
        class="bg-slate-900 text-white p-8 md:p-10 print:bg-slate-900 print:text-white"
      >
        {/* Added print:flex-row to maintain side-by-side layout in print */}
        <div
          class="flex flex-col md:flex-row print:flex-row justify-between items-start md:items-center gap-6"
        >
          <div>
            <h1 class="text-4xl font-bold tracking-tight">
              {resumeData?.data.header.name}
            </h1>
            <p class="text-xl text-slate-300 font-medium mt-1">
              {resumeData?.data.header.title}
            </p>
            {
              hasAdditionalTitles && (
                <span class="text-base text-slate-300 font-medium">
                  {resumeData?.data.header.additionalTitles?.join(" | ")}
                </span>
              )
            }
          </div>

          <div class="flex flex-col gap-2 text-sm text-slate-300">
            {
              resumeData?.data.header.location && (
                <div class="flex items-center gap-2">
                  <MapPin size={16} />
                  <span>{resumeData?.data.header.location}</span>
                </div>
              )
            }
            <div class="flex items-center gap-2">
              <Mail size={16} />
              <a
                href={`mailto:${resumeData?.data.header.email}`}
                class="hover:text-white transition-colors"
                >{resumeData?.data.header.email}</a
              >
            </div>
            <div class="flex items-center gap-2">
              <Phone size={16} />
              <span>{resumeData?.data.header.phone}</span>
            </div>
            <div class="flex gap-4 mt-2 print:text-black">
              {
                resumeData?.data.header.linkedin && (
                  <a
                    href={`https://${resumeData?.data.header.linkedin}`}
                    target="_blank"
                    rel="noreferrer"
                    class="text-slate-300 hover:text-white transition-colors flex items-center gap-1"
                  >
                    <Linkedin size={20} class="print:hidden" />
                    <span class="hidden print:inline text-xs">
                      {resumeData?.data.header.linkedin}
                    </span>
                  </a>
                )
              }
              {
                resumeData?.data.header.github && (
                  <a
                    href={`https://${resumeData?.data.header.github}`}
                    target="_blank"
                    rel="noreferrer"
                    class="text-slate-300 hover:text-white transition-colors flex items-center gap-1"
                  >
                    <Github size={20} class="print:hidden" />
                    <span class="hidden print:inline text-xs">
                      {resumeData?.data.header.github}
                    </span>
                  </a>
                )
              }
              <a
                href={Astro.site}
                target="_blank"
                rel="noreferrer"
                class="text-slate-300 hover:text-white transition-colors flex items-center gap-1"
              >
                <Globe size={20} class="print:hidden" />
                <span class="hidden print:inline text-xs">{Astro.site}</span>
              </a>
            </div>
          </div>
        </div>

        {
          resumeData?.data.header.summary && (
            <div class="mt-8 border-t border-slate-700 pt-6">
              <p class="text-slate-300 leading-relaxed max-w-3xl">
                {resumeData?.data.header.summary}
              </p>
            </div>
          )
        }
      </header>

      {/* MAIN BODY: Experience (Left) & Skills (Right) */}
      {/* Added print:flex-row to prevent stacking in print */}
      <div class="flex flex-col md:flex-row print:flex-row grow">
        {/* LEFT COLUMN: Experience ONLY */}
        {/* Added print:w-2/3 to maintain width */}
        <div
          class="w-full md:w-2/3 print:w-2/3 p-8 md:p-10 pr-4 md:pr-12 bg-white"
        >
          <section>
            <h2
              class="text-xl font-bold text-slate-900 border-b-2 border-slate-300 pb-2 mb-6 flex items-center gap-2"
            >
              <Briefcase size={20} class="text-slate-700" /> Experience
            </h2>
            <div class="space-y-8">
              {
                resumeData?.data.experience.map((companyData) => (
                  <div class="relative pl-4 border-l-2 border-slate-300 transition-colors duration-300">
                    <div class="flex justify-between items-baseline mb-4">
                      <div class="text-xl font-bold text-slate-900">
                        {companyData.company}
                      </div>
                    </div>
                    <div class="space-y-6">
                      {companyData.roles.map((role) => (
                        <div class="relative">
                          <div class="absolute -left-5.25 top-2 w-2.5 h-2.5 rounded-full bg-slate-400 border-2 border-white" />
                          <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline mb-2">
                            <h3 class="text-lg font-bold text-slate-800">
                              {role.title}
                            </h3>
                            <span class="text-sm font-medium text-slate-500">
                              {role.period}
                            </span>
                          </div>
                          <ul class="list-disc list-outside ml-4 space-y-1.5 text-slate-700 text-sm leading-relaxed">
                            {role.achievements.map((point) => (
                              <li>{point}</li>
                            ))}
                          </ul>
                        </div>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>
          </section>
        </div>

        {/* RIGHT COLUMN: Skills ONLY */}
        {/* Added print:w-1/3 to maintain width */}
        <div
          class="w-full md:w-1/3 print:w-1/3 bg-slate-50 p-8 md:p-10 border-l border-slate-200"
        >
          <section>
            <h2
              class="text-xl font-bold text-slate-900 border-b-2 border-slate-300 pb-2 mb-8 flex items-center gap-2"
            >
              <Cpu size={20} class="text-slate-700" /> Technical Skills
            </h2>
            <div class="space-y-5">
              {
                resumeData?.data.skills.map((skillGroup) => (
                  <div>
                    <h3 class="text-sm font-bold text-slate-900 uppercase tracking-wider mb-2 border-l-4 border-slate-700 pl-3">
                      {skillGroup.category}
                    </h3>
                    <div class="flex flex-wrap gap-1.5 pl-1">
                      {skillGroup.items.map((item) => (
                        <span class="px-2 py-0.5 bg-white border border-slate-300 text-slate-800 text-xs font-bold rounded-md shadow-sm">
                          {item}
                        </span>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>
          </section>
        </div>
      </div>

      {/* FULL WIDTH PROJECTS SECTION */}
      {
        hasProjects && (
          <div class="px-8 md:px-10 pb-6 bg-white">
            <h2 class="text-xl font-bold text-slate-900 border-b-2 border-slate-300 pb-2 mb-6 flex items-center gap-2">
              <FolderGit size={20} class="text-slate-700" /> Key Projects
            </h2>
            {/* Added print:grid-cols-3 to keep 3 columns in print */}
            <div class="grid grid-cols-1 md:grid-cols-3 print:grid-cols-3 gap-4">
              {projects
                .filter((p: any) => p.data.featured)
                .slice(0, 3)
                .map((project: any) => (
                  <div class="bg-slate-50 p-4 rounded-lg border border-slate-200 hover:border-slate-400 transition-colors">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="font-bold text-slate-900">{project.name}</h3>
                      {project.link && (
                        <a
                          href={
                            project.link.startsWith("http")
                              ? project.link
                              : `https://${project.link}`
                          }
                          target="_blank"
                          rel="noreferrer"
                          class="text-slate-600 hover:text-slate-900 print:hidden"
                        >
                          <ExternalLink size={16} />
                        </a>
                      )}
                    </div>
                    <p class="text-xs font-bold text-slate-700 font-mono mb-2">
                      {project.tech}
                    </p>
                    {project.description && (
                      <p class="text-sm text-slate-600 leading-snug">
                        {project.description}
                      </p>
                    )}
                  </div>
                ))}
            </div>
          </div>
        )
      }

      {/* FULL WIDTH PUBLICATIONS SECTION */}
      {
        hasPublications && (
          <div class="px-8 md:px-10 pb-6 bg-white">
            <h2 class="text-xl font-bold text-slate-900 border-b-2 border-slate-300 pb-2 mb-6 flex items-center gap-2">
              <BookOpen size={20} class="text-slate-700" /> Publications &
              Research
            </h2>
            <div class="grid grid-cols-1 gap-4">
              {publications
                .filter((p: any) => p.data.featured)
                .slice(0, 3)
                .map((pub: any) => (
                  <div class="flex flex-col md:flex-row print:flex-row md:justify-between md:items-baseline border-b border-slate-100 last:border-0 pb-3 last:pb-0 hover:bg-slate-50 transition-colors p-2 rounded">
                    <div class="grow">
                      <a
                        href={`https://${pub.link}`}
                        target="_blank"
                        rel="noreferrer"
                        class="font-bold text-slate-900 hover:underline decoration-slate-400 underline-offset-4"
                      >
                        {pub.title}
                      </a>
                      {pub.conference && (
                        <div class="text-sm text-slate-600 mt-1 italic">
                          {pub.conference}
                        </div>
                      )}
                    </div>
                    <div class="mt-2 md:mt-0 md:ml-6 text-sm font-bold text-slate-500 whitespace-nowrap">
                      {pub.year}
                    </div>
                  </div>
                ))}
            </div>
          </div>
        )
      }

      {/* FOOTER SECTION: Education & Certifications */}
      <div class="bg-slate-50 p-8 md:p-10 border-t border-slate-200">
        {/* Added print:grid-cols-12 to maintain grid layout */}
        <div class="grid grid-cols-1 md:grid-cols-12 print:grid-cols-12 gap-10">
          {/* EDUCATION */}
          {/* Added print:col-span-4 */}
          <div class="md:col-span-4 print:col-span-4">
            <h2
              class="text-lg font-bold text-slate-900 mb-4 flex items-center gap-2"
            >
              <GraduationCap size={20} class="text-slate-700" /> Education
            </h2>
            <div class="space-y-4">
              {
                resumeData?.data.education.map((edu) => (
                  <div>
                    <h3 class="font-bold text-slate-900 text-sm leading-tight">
                      {edu.degree}
                    </h3>
                    <div class="text-xs text-slate-700 font-medium mt-1">
                      {edu.institution}
                    </div>
                    <div class="text-xs text-slate-500 mt-0.5">
                      {edu.period}
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          {/* CERTIFICATIONS */}
          {/* Added print:col-span-8 */}
          <div class="md:col-span-8 print:col-span-8">
            <h2
              class="text-lg font-bold text-slate-900 mb-4 flex items-center gap-2"
            >
              <Award size={20} class="text-slate-700" /> Certifications
            </h2>
            {/* Added print:grid-cols-2 */}
            <div
              class="grid grid-cols-1 sm:grid-cols-2 print:grid-cols-2 gap-x-8 gap-y-4"
            >
              {
                resumeData?.data.certificates?.map((cert) => (
                  <div class="flex flex-col text-sm border-l-2 border-slate-300 pl-3 hover:border-slate-500 transition-colors">
                    <a
                      href={cert.link}
                      target="_blank"
                      rel="noreferrer"
                      class="font-semibold text-slate-800 hover:text-black transition-colors leading-tight mb-1"
                      title={cert.name}
                    >
                      {cert.name}
                    </a>
                    <div class="flex flex-wrap gap-x-2 text-xs text-slate-500">
                      <span class="font-medium text-slate-600">
                        {cert.issuer}
                      </span>
                      <span>â€¢</span>
                      <span>{cert.date}</span>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
        {/* AWARDS SECTION */}
        {
          hasAwards && (
            <div class="mt-10 pt-8 border-t border-slate-200">
              <h2 class="text-lg font-bold text-slate-900 mb-4 flex items-center gap-2">
                <Trophy size={20} class="text-slate-700" /> Honors & Awards
              </h2>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                {resumeData?.data.awards.map((award, index) => (
                  <div class="flex flex-col">
                    <div class="font-bold text-slate-900 text-sm leading-tight mb-1">
                      {award.title}
                    </div>
                    <div class="text-xs text-slate-600 font-medium">
                      {award.issuer}
                    </div>
                    <div class="text-xs text-slate-500 mt-0.5">
                      {award.year}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )
        }
      </div>
    </div>
  </div>
</Layout>
