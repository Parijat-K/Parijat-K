---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Search, BookOpen } from "lucide-astro";

const publications = await getCollection("publications");
---

<Layout title="Research" currentPath="/research">
  <div
    class="min-h-screen bg-slate-50 animate-in fade-in duration-500 py-12 px-4 md:px-8"
  >
    <div class="max-w-4xl mx-auto">
      <div class="mb-12 text-center md:text-left">
        <h1 class="text-4xl font-extrabold text-slate-900 mb-4">
          Research Publications
        </h1>
        <p class="text-xl text-slate-600 max-w-2xl mb-8">
          Selected academic papers, journals, and conference proceedings in
          distributed systems and software architecture.
        </p>

        {/* Search Bar */}
        <div class="relative max-w-md mx-auto md:mx-0">
          <Search class="absolute left-3 top-3 text-slate-400" size={20} />
          <input
            type="text"
            id="research-search"
            placeholder="Filter research by title, topic, or venue..."
            class="w-full pl-10 pr-4 py-3 rounded-lg border border-slate-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-shadow shadow-sm"
          />
        </div>
      </div>

      <div id="research-list" class="space-y-6">
        {
          publications.map((pub) => (
            <div
              class="research-card bg-white p-8 rounded-xl border border-slate-200 shadow-sm hover:shadow-md hover:border-indigo-300 transition-all cursor-pointer group flex flex-col"
              data-title={pub.data.title.toLowerCase()}
              data-conf={pub.data.publisher.toLowerCase()}
              data-tags={pub.data.tags.join(" ").toLowerCase()}
            >
              <div class="flex flex-col sm:flex-row gap-6">
                <div class="shrink-0">
                  <div class="w-16 h-16 bg-indigo-50 group-hover:bg-indigo-100 rounded-lg flex items-center justify-center text-indigo-700 font-bold text-xl border border-indigo-100 transition-colors">
                    {pub.data.year}
                  </div>
                </div>
                <div class="grow">
                  <div class="flex justify-between items-start">
                    <a
                      href={`/research/${pub.id}`}
                      class="text-xl font-bold text-slate-900 mb-2 leading-tight group-hover:text-indigo-600 transition-colors"
                    >
                      {pub.data.title}
                    </a>
                  </div>
                  <p class="text-slate-600 italic mb-4 flex items-center gap-2 text-sm">
                    <BookOpen size={16} class="shrink-0" /> {pub.data.publisher}
                  </p>
                  <p class="text-slate-500 text-sm mb-4 line-clamp-3 leading-relaxed">
                    {pub.data.abstract}
                  </p>
                  <div class="flex flex-wrap gap-2 mt-auto">
                    {pub.data.tags.slice(0, 4).map((tag) => (
                      <span class="px-2 py-1 bg-slate-100 text-slate-600 text-xs rounded font-medium border border-slate-200">
                        {tag}
                      </span>
                    ))}
                    {pub.data.tags.length > 4 && (
                    <span class="px-2 py-1 text-slate-400 text-xs font-medium">
                      +{pub.data.tags.length - 4}
                    </span>
                  )}
                </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div id="no-results" class="text-center py-20 text-slate-500 hidden">
        No publications found matching your criteria.
      </div>

      <div class="mt-16 text-center">
        <a href="/" class="text-indigo-600 font-bold hover:underline">
          &larr; Back to Home
        </a>
      </div>
    </div>
  </div>

  <script>
    const searchInput = document.getElementById("research-search");
    const researchCards = document.querySelectorAll(".research-card");
    const noResults = document.getElementById("no-results");

    searchInput?.addEventListener("input", (e) => {
      const query = (e.target as HTMLInputElement).value.toLowerCase();
      let visibleCount = 0;

      researchCards.forEach((card) => {
        const title = card.getAttribute("data-title") || "";
        const conf = card.getAttribute("data-conf") || "";
        const tags = card.getAttribute("data-tags") || "";

        if (
          title.includes(query) ||
          conf.includes(query) ||
          tags.includes(query)
        ) {
          (card as HTMLElement).style.display = "block";
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = "none";
        }
      });

      if (visibleCount === 0) {
        noResults?.classList.remove("hidden");
      } else {
        noResults?.classList.add("hidden");
      }
    });
  </script>
</Layout>
