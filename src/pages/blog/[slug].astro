---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Breadcrumbs from '../../components/ui/Breadcrumbs.astro';

export async function getStaticPaths() {
  const blogItems = await getCollection('blog', ({ data }) => !data.draft);
  return blogItems.map((item) => ({
    params: { slug: item.id },
    props: { item },
  }));
}

interface Props {
  item: CollectionEntry<'blog'>;
}

const { item } = Astro.props;
const { Content } = await item.render();

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' });
}

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: item.data.title },
];
---

<Layout
  title={`${item.data.title} - Blog`}
  description={item.data.description}
  type="article"
  author={item.data.author}
  publishedDate={item.data.publishedDate}
>
  <Navigation />

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumbs -->
    <Breadcrumbs items={breadcrumbs} class="mb-6" />

    <!-- Article Header -->
    <article class="bg-white rounded-lg shadow-lg p-8 mb-8">
      <!-- Category -->
      <div class="mb-4">
        <span class="text-xs uppercase tracking-wide text-indigo-600 font-medium">
          {item.data.category}
        </span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl font-bold text-slate-900 mb-4">
        {item.data.title}
      </h1>

      <!-- Meta -->
      <div class="flex items-center gap-4 text-slate-600 mb-6 pb-6 border-b border-slate-200">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span class="font-medium">{item.data.author}</span>
        </div>
        <span>•</span>
        <time datetime={item.data.publishedDate}>{formatDate(item.data.publishedDate)}</time>
        {item.data.updatedDate && (
          <>
            <span>•</span>
            <span class="text-sm">Updated {formatDate(item.data.updatedDate)}</span>
          </>
        )}
      </div>

      <!-- Cover Image (if present) -->
      {item.data.coverImage && (
        <div class="mb-8 -mx-8">
          <img
            src={item.data.coverImage}
            alt={item.data.title}
            class="w-full h-64 object-cover rounded-t-lg"
          />
        </div>
      )}

      <!-- Content -->
      <div class="prose prose-slate prose-lg max-w-none mb-8">
        <Content />
      </div>

      <!-- Tags -->
      <div class="pt-8 border-t border-slate-200">
        <h3 class="text-sm font-medium text-slate-900 mb-3">Tags</h3>
        <div class="flex flex-wrap gap-2">
          {item.data.tags.map((tag) => (
            <span class="text-sm px-3 py-1 bg-slate-100 text-slate-700 rounded-full">
              #{tag}
            </span>
          ))}
        </div>
      </div>
    </article>

    <!-- Back to Blog -->
    <div class="text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 px-4 py-2 text-slate-700 hover:bg-slate-100 rounded-md transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to All Posts
      </a>
    </div>
  </main>
</Layout>
