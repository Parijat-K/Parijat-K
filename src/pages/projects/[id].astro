---
import { getCollection, render } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { FolderGit, ArrowLeft, Github, Clock } from "lucide-astro";
import { getProjectTimestamps } from "../../utils/projectFileMetadata";

export async function getStaticPaths() {
  const collection = await getCollection("projects");

  if (!collection || collection.length === 0) {
    return [];
  }

  return Promise.all(
    collection.map(async (project) => ({
      params: { id: project.id },
      props: {
        project,
        projectDates: await getProjectTimestamps(project.id),
      },
    }))
  );
}

const siteOrigin = Astro.site?.origin ?? "https://parijatkhan.in";
const { project, projectDates } = Astro.props;
const canonicalUrl = `${siteOrigin}/projects/${project.id}`;
const projectDescription =
  project.data.shortDescription ?? project.data.description ?? project.data.name;
const structuredData = [
  {
    "@context": "https://schema.org",
    "@type": "CreativeWork",
    name: project.data.name,
    description: projectDescription,
    url: canonicalUrl,
    datePublished: projectDates.publishedAt.toISOString(),
    dateModified: projectDates.updatedAt.toISOString(),
    keywords: project.data.tags,
    author: {
      "@type": "Person",
      name: project.data.owner ?? "Parijat Khan",
    },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      { "@type": "ListItem", position: 1, name: "Home", item: siteOrigin },
      {
        "@type": "ListItem",
        position: 2,
        name: "Projects",
        item: `${siteOrigin}/projects`,
      },
      {
        "@type": "ListItem",
        position: 3,
        name: project.data.name,
        item: canonicalUrl,
      },
    ],
  },
];
const dateFormatter = new Intl.DateTimeFormat("en-US", { dateStyle: "medium" });
const formatDate = (date: Date) => dateFormatter.format(date);

const getRelatedProjects = (
  collection: Awaited<ReturnType<typeof getCollection>>,
  currentId: string,
  tags: string[]
) => {
  return collection
    .filter(
      (p) => p.id !== currentId && p.data.tags.some((t) => tags.includes(t))
    )
    .slice(0, 3);
};

const { Content } = await render(project);
const projects = await getCollection("projects");
const relatedProjects = getRelatedProjects(projects, project.id, project.data.tags);
---

<Layout
  title={project.data.name}
  currentPath="/projects"
  description={projectDescription}
  canonicalUrl={canonicalUrl}
  ogType="article"
  additionalStructuredData={structuredData}
>
  <div class="min-h-screen bg-slate-50 animate-in fade-in duration-500 pb-20">
    {/* Header */}
    <div class="bg-slate-900 text-white pt-12 pb-24 px-4">
      <div class="max-w-4xl mx-auto">
        <a
          href="/projects"
          class="text-indigo-300 hover:text-white flex items-center gap-2 mb-6 font-medium transition-colors"
        >
          <ArrowLeft size={20} /> Back to Projects
        </a>
        <h1 class="text-3xl md:text-5xl font-extrabold mb-4">
          {project.data.name}
        </h1>
          <div class="flex flex-wrap gap-4 items-center">
            <div class="flex items-center gap-2 text-slate-300">
              <FolderGit size={20} />
              <span class="font-mono">{project.data.tech.join(', ')}</span>
            </div>
            <div class="flex items-center gap-2 text-slate-300 text-sm">
              <Clock size={16} />
              <span>
                Published {formatDate(projectDates.publishedAt)}
              </span>
              {projectDates.updatedAt.getTime() !== projectDates.publishedAt.getTime() && (
                <span class="text-slate-400">
                  Â· Last edited {formatDate(projectDates.updatedAt)}
                </span>
              )}
            </div>
            {
              project.data.link && (
                <a
                  href={`https://${project.data.link}`}
                target="_blank"
                rel="noreferrer"
                class="flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-full text-sm font-bold transition-colors"
              >
                <Github size={16} /> View Code
              </a>
            )
          }
        </div>
      </div>
    </div>

    {/* Content */}
    <div class="max-w-4xl mx-auto px-4 -mt-16">
      <div
        class="bg-white rounded-xl shadow-xl p-8 md:p-12 border border-slate-100"
      >
        <div class="prose markdown-shell max-w-none text-slate-700">
          <Content />

          <h3 class="text-xl font-bold text-slate-900 mb-4">
            Technologies & Concepts
          </h3>
          <div class="flex flex-wrap gap-2 mb-8">
            {
              project.data.tags.map((tag) => (
                <a
                  href={`/research?tag=${encodeURIComponent(tag)}`}
                  class="px-3 py-1 bg-slate-100 text-slate-700 rounded-full text-sm font-medium hover:bg-indigo-50 hover:text-indigo-700"
                >
                  {tag}
                </a>
              ))
            }
          </div>
        </div>
      </div>

      {/* Related Projects */}
      {
        relatedProjects.length > 0 && (
          <div class="mt-16">
            <h3 class="text-2xl font-bold text-slate-900 mb-6">
              Related Projects
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {relatedProjects.map((rp) => (
                <a
                  href={`/projects/${rp.id}`}
                  class="bg-white p-6 rounded-xl border border-slate-200 hover:border-indigo-300 hover:-translate-y-1 transition-all cursor-pointer"
                >
                  <h4 class="font-bold text-slate-900 mb-2">{rp.data.name}</h4>
                  <p class="text-xs text-indigo-600 font-mono mb-2">
                    {rp.data.tech}
                  </p>
                  {rp.data.description && (
                    <p class="text-sm text-slate-600 line-clamp-2">
                      {rp.data.description}
                    </p>
                  )}
                </a>
              ))}
            </div>
          </div>
        )
      }
    </div>
  </div>
</Layout>
