---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';

interface Props {
  slug: string;
  title: string;
  description: string;
  category: string;
  status: string;
  technologies: string[];
  role?: string;
  highlights: string[];
  githubUrl?: string;
  demoUrl?: string;
}

const {
  slug,
  title,
  description,
  category,
  status,
  technologies,
  role,
  highlights,
  githubUrl,
  demoUrl,
} = Astro.props;

const statusVariant = status === 'completed' ? 'success' : status === 'in-progress' ? 'warning' : 'secondary';
---

<Card class="p-6 h-full flex flex-col" data-filter-item data-category={category} data-status={status}>
  <div class="flex items-start gap-4 mb-4">
    <!-- Project Icon -->
    <div class="flex-shrink-0 w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
      <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
      </svg>
    </div>

    <!-- Title and Status -->
    <div class="flex-grow">
      <div class="flex items-start justify-between gap-2">
        <h3 class="text-xl font-bold text-slate-900">
          <a href={`/projects/${slug}`} class="hover:text-indigo-600 transition-colors">
            {title}
          </a>
        </h3>
        {githubUrl && (
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="flex-shrink-0 p-2 text-slate-400 hover:text-slate-900 transition-colors"
            aria-label="View code on GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
      </div>

      <div class="flex items-center gap-2 mt-1">
        <Badge text={status} variant={statusVariant} />
        {role && (
          <span class="text-xs text-slate-500">{role}</span>
        )}
      </div>
    </div>
  </div>

  <!-- Description -->
  <p class="text-slate-700 mb-4">
    {description}
  </p>

  <!-- Highlights -->
  {highlights.length > 0 && (
    <ul class="space-y-2 mb-4 flex-grow">
      {highlights.slice(0, 3).map((highlight) => (
        <li class="flex items-start gap-2 text-sm text-slate-600">
          <svg class="w-4 h-4 mt-0.5 text-indigo-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>{highlight}</span>
        </li>
      ))}
    </ul>
  )}

  <!-- Technologies -->
  <div class="mt-auto pt-4 border-t border-slate-200">
    <div class="flex flex-wrap gap-2">
      {technologies.slice(0, 5).map((tech) => (
        <span class="text-xs px-2 py-1 bg-indigo-50 text-indigo-700 rounded font-mono">
          {tech}
        </span>
      ))}
      {technologies.length > 5 && (
        <span class="text-xs px-2 py-1 text-slate-500">
          +{technologies.length - 5} more
        </span>
      )}
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex gap-2 mt-4">
    <a
      href={`/projects/${slug}`}
      class="flex-1 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 transition-colors text-center"
    >
      View Details
    </a>
    {demoUrl && (
      <a
        href={demoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="px-4 py-2 border-2 border-slate-300 text-slate-700 text-sm font-medium rounded-md hover:bg-slate-50 transition-colors"
        aria-label="View live demo"
      >
        Demo
      </a>
    )}
  </div>
</Card>
