---
import { getEntry } from "astro:content";
import { Linkedin, Github, Mail } from "lucide-astro";

const resumeData = await getEntry("resume", "main");
---

<footer
  class="bg-slate-950 text-slate-300 py-6 border-t border-slate-800 print:hidden mt-auto"
>
  <div
    class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-4"
  >
    <div class="flex items-center gap-2 text-sm">
      <span class="font-bold text-white tracking-tight"
        >{resumeData?.data.header.name}</span
      >
      <span>Â© {new Date().getFullYear()}</span>
    </div>
    <div class="flex gap-4">
      {resumeData?.data.header.linkedin && (
        <a
          href={`https://${resumeData?.data.header.linkedin}`}
          target="_blank"
          rel="noreferrer"
          class="hover:text-white transition-colors"
          ><Linkedin size={18} /></a
        >
      )}
      {resumeData?.data.header.github && (
        <a
          href={`https://${resumeData?.data.header.github}`}
          target="_blank"
          rel="noreferrer"
          class="hover:text-white transition-colors"
          ><Github size={18} /></a
        >
      )}
      <button
        id="footer-contact-trigger"
        type="button"
        class="hover:text-white transition-colors"
        aria-label="Open contact modal"
        aria-haspopup="dialog"
      >
        <Mail size={18} />
      </button>
    </div>
  </div>
</footer>
