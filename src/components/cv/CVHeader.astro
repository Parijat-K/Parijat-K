---
import { Image } from 'astro:assets';

interface PersonalInfo {
  name: string;
  title: string;
  additionalTitles?: string[];
  email: string;
  phone: string;
  location: string;
  linkedin?: string;
  github?: string;
  website?: string;
  photoUrl?: string;
}

interface Props {
  personalInfo: PersonalInfo;
}

const { personalInfo } = Astro.props;

// Dynamically import the profile photo if photoUrl is provided
const images = import.meta.glob('../../assets/**/*.{jpg,jpeg,png,webp}', { eager: true });
const profilePhoto = personalInfo.photoUrl
  ? images[personalInfo.photoUrl.replace('~/', '../../')] as { default: ImageMetadata }
  : null;
---

<header class="mb-8 pb-8 border-b border-slate-200">
  <div class="flex flex-col md:flex-row gap-6 items-start md:items-center">
    <!-- Profile Photo (hidden in print) -->
    {profilePhoto && (
      <div class="cv-photo no-print shrink-0">
        <Image
          src={profilePhoto.default}
          alt={`${personalInfo.name} profile photo`}
          class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg"
          width={128}
          height={128}
        />
      </div>
    )}

    <!-- Name and Title -->
    <div class="grow">
      <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-2">
        {personalInfo.name}
      </h1>
      <p class="text-xl text-slate-600 font-medium mb-1">
        {personalInfo.title}
      </p>
      {personalInfo.additionalTitles && personalInfo.additionalTitles.length > 0 && (
        <p class="text-lg text-slate-500 mb-4">
          {personalInfo.additionalTitles.join(' | ')}
        </p>
      )}
    </div>

    <!-- Contact Info -->
    <div class="shrink-0 text-sm text-slate-700 space-y-2">
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <a href={`mailto:${personalInfo.email}`} class="hover:text-indigo-600 transition-colors">
          {personalInfo.email}
        </a>
      </div>

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>{personalInfo.phone}</span>
      </div>

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>{personalInfo.location}</span>
      </div>

      {personalInfo.linkedin && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-slate-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          <a href={personalInfo.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-indigo-600 transition-colors">
            LinkedIn
          </a>
        </div>
      )}

      {personalInfo.github && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-slate-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <a href={personalInfo.github} target="_blank" rel="noopener noreferrer" class="hover:text-indigo-600 transition-colors">
            GitHub
          </a>
        </div>
      )}

      {personalInfo.website && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <a href={personalInfo.website} target="_blank" rel="noopener noreferrer" class="hover:text-indigo-600 transition-colors">
            Website
          </a>
        </div>
      )}
    </div>
  </div>
</header>
