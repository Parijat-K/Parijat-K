---
interface Education {
  id: string;
  institution: string;
  degree: string;
  field: string;
  location: string;
  startDate: string;
  endDate: string;
  gpa?: string;
  honors?: string[];
}

interface Props {
  education: Education[];
}

const { education } = Astro.props;

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}
---

<section class="mb-8">
  <h2 class="text-2xl font-bold text-slate-900 mb-6">Education</h2>

  <div class="space-y-6">
    {education.map((edu) => (
      <div class="relative pl-8 border-l-2 border-slate-200 pb-6 last:pb-0 page-break-avoid">
        <!-- Timeline dot -->
        <div class="absolute left-0 top-0 -translate-x-1/2 w-4 h-4 rounded-full bg-indigo-600 border-4 border-white shadow" />

        <!-- Content -->
        <div>
          <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-2">
            <div>
              <h3 class="text-lg font-bold text-slate-900">
                {edu.degree} in {edu.field}
              </h3>
              <p class="text-indigo-600 font-medium">{edu.institution}</p>
            </div>
            <div class="text-sm text-slate-600 md:text-right mt-1 md:mt-0">
              <p>{formatDate(edu.startDate)} - {formatDate(edu.endDate)}</p>
              <p class="text-slate-500">{edu.location}</p>
            </div>
          </div>

          {edu.gpa && (
            <p class="text-slate-700 mb-2">
              <span class="font-medium">GPA:</span> {edu.gpa}
            </p>
          )}

          {edu.honors && edu.honors.length > 0 && (
            <ul class="space-y-1">
              {edu.honors.map((honor) => (
                <li class="flex items-start gap-2 text-slate-700">
                  <svg class="w-4 h-4 mt-1 text-amber-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span>{honor}</span>
                </li>
              ))}
            </ul>
          )}
        </div>
      </div>
    ))}
  </div>
</section>
