---
interface Certification {
  id: string;
  name: string;
  issuer: string;
  date?: string;
  certificateUrl?: string;
}

interface Props {
  certifications?: Certification[];
}

const { certifications } = Astro.props;

if (!certifications || certifications.length === 0) {
  // Don't render section if no certifications
  return null;
}

function formatDate(dateStr?: string): string | null {
  if (!dateStr) {
    return null;
  }

  const date = new Date(dateStr);
  if (isNaN(date.getTime())) {
    return null;
  }

  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}
---

<section class="mb-8">
  <h2 class="text-2xl font-bold text-slate-900 mb-6">Certifications</h2>

  <ul class="space-y-4">
    {certifications.map((cert) => {
      const formattedDate = formatDate(cert.date);

      return (
        <li class="bg-slate-50/80 border border-slate-200 rounded-lg p-4 page-break-avoid">
          <div>
            <h3 class="font-semibold text-slate-900 leading-tight">{cert.name}</h3>
            <p class="text-sm text-slate-600">{cert.issuer}</p>
            {formattedDate && (
              <p class="text-xs text-slate-500 mt-1">{formattedDate}</p>
            )}
          </div>

          {cert.certificateUrl && (
            <a
              href={cert.certificateUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm font-semibold text-indigo-700 hover:text-indigo-500 bg-indigo-50/70 border border-indigo-100 px-3 py-1 rounded-full transition-colors no-print mt-3"
              aria-label="View digital certificate"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3h7v7m0-7L10 14" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12v7a2 2 0 002 2h7" />
              </svg>
              <span>Digital Certificate</span>
            </a>
          )}
        </li>
      );
    })}
  </ul>
</section>
