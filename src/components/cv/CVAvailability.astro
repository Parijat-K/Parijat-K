---
import Button from '../ui/Button.astro';

interface Props {
  availabilityStatus?: string;
  email: string;
  linkedin?: string;
}

const {
  availabilityStatus = "I am currently open to new opportunities and freelance collaborations.",
  email,
  linkedin
} = Astro.props;
---

<section class="bg-slate-800 text-white py-10 md:py-12 px-6 sm:px-8 md:px-12 mt-8 rounded-b-lg md:rounded-b-xl no-print">
  <div class="text-center">
    <h2 class="text-3xl font-bold text-white mb-4">Availability & Contact</h2>

    <p class="text-lg text-slate-300 mb-8 max-w-2xl mx-auto">
      {availabilityStatus}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <Button
        variant="primary"
        href={`mailto:${email}`}
        class="w-full sm:w-auto"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Email Me
      </Button>

      {linkedin && (
        <Button
          variant="secondary"
          href={linkedin}
          class="w-full sm:w-auto border-white text-white hover:bg-white hover:text-slate-800"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          LinkedIn Profile
        </Button>
      )}
    </div>
  </div>
</section>
