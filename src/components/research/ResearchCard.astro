---
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';

interface Props {
  slug: string;
  title: string;
  type: string;
  authors: string[];
  publishedDate: string;
  abstract: string;
  status: string;
  venue?: string;
  tags: string[];
  pdfUrl?: string;
  arxivUrl?: string;
  githubUrl?: string;
  doi?: string;
  category: string;
}

const {
  slug,
  title,
  type,
  authors,
  publishedDate,
  abstract,
  status,
  venue,
  tags,
  pdfUrl,
  arxivUrl,
  githubUrl,
  doi,
  category,
} = Astro.props;

function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
}

const statusVariant = status === 'published' ? 'success' : status === 'in-progress' ? 'warning' : 'status';
---

<Card class="p-6 h-full flex flex-col" data-filter-item data-category={category} data-type={type} data-status={status}>
  <!-- Header with status badge -->
  <div class="flex items-start justify-between mb-4">
    <div class="flex-grow">
      <span class="text-xs uppercase tracking-wide text-slate-500 font-medium">{type}</span>
    </div>
    <Badge text={status} variant={statusVariant} />
  </div>

  <!-- Title and Authors -->
  <h3 class="text-xl font-bold text-slate-900 mb-2">
    <a href={`/research/${slug}`} class="hover:text-indigo-600 transition-colors">
      {title}
    </a>
  </h3>

  <p class="text-sm text-slate-600 mb-2">
    {authors.join(', ')}
  </p>

  {venue && (
    <p class="text-sm text-indigo-600 font-medium mb-3">{venue}</p>
  )}

  <p class="text-xs text-slate-500 mb-3">{formatDate(publishedDate)}</p>

  <!-- Abstract Preview -->
  <p class="text-slate-700 text-sm mb-4 line-clamp-3 flex-grow">
    {abstract}
  </p>

  <!-- Tags -->
  <div class="flex flex-wrap gap-2 mb-4">
    {tags.map((tag) => (
      <span class="text-xs px-2 py-1 bg-indigo-50 text-indigo-700 rounded">
        #{tag}
      </span>
    ))}
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-wrap gap-2 mt-auto pt-4 border-t border-slate-200">
    <Button href={`/research/${slug}`} variant="primary" class="text-xs">
      Read More
    </Button>

    {pdfUrl && (
      <Button href={pdfUrl} variant="ghost" class="text-xs" ariaLabel="Download PDF">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        PDF
      </Button>
    )}

    {arxivUrl && (
      <Button href={arxivUrl} variant="ghost" class="text-xs" ariaLabel="View on arXiv">
        arXiv
      </Button>
    )}

    {githubUrl && (
      <Button href={githubUrl} variant="ghost" class="text-xs" ariaLabel="View code on GitHub">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
      </Button>
    )}

    {doi && (
      <Button href={`https://doi.org/${doi}`} variant="ghost" class="text-xs" ariaLabel="View DOI">
        DOI
      </Button>
    )}
  </div>
</Card>
