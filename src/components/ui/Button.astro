---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  href?: string;
  class?: string;
  ariaLabel?: string;
}

const { variant = 'primary', href, class: className = '', ariaLabel } = Astro.props;

const baseClasses = 'inline-flex items-center gap-2 px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2';

const variantClasses = {
  primary: 'bg-indigo-600 text-white hover:bg-indigo-700 focus:ring-indigo-500',
  secondary: 'border-2 border-slate-300 text-slate-700 hover:bg-slate-50 focus:ring-slate-500',
  ghost: 'text-slate-700 hover:bg-slate-100 focus:ring-slate-500',
};

const Component = href ? 'a' : 'button';
---

<Component
  href={href}
  class={`${baseClasses} ${variantClasses[variant]} ${className}`}
  aria-label={ariaLabel}
>
  <slot />
</Component>
