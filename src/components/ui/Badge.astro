---
interface Props {
  text: string;
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'technology' | 'status';
  class?: string;
}

const { text, variant = 'primary', class: className = '' } = Astro.props;

const baseClasses = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium transition-colors duration-200';

const variantClasses = {
  primary: 'bg-indigo-100 text-indigo-800',
  secondary: 'bg-slate-100 text-slate-800',
  success: 'bg-green-100 text-green-800',
  warning: 'bg-amber-100 text-amber-800',
  technology: 'bg-indigo-50 text-indigo-700 font-mono',
  status: 'bg-blue-100 text-blue-800',
};
---

<span class={`${baseClasses} ${variantClasses[variant]} ${className}`}>
  {text}
</span>
