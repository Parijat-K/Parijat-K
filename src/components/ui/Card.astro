---
interface Props {
  variant?: 'default' | 'hero';
  class?: string;
}

const { variant = 'default', class: className = '' } = Astro.props;

const baseClasses = 'bg-white rounded-lg shadow-md transition-all duration-300';
const variantClasses = {
  default: 'hover:-translate-y-1 hover:shadow-lg',
  hero: 'relative overflow-hidden',
};
---

<div class={`${baseClasses} ${variantClasses[variant]} ${className}`}>
  {variant === 'hero' && (
    <div class="absolute inset-0 opacity-5 pointer-events-none">
      <!-- Geometric pattern overlay using SVG -->
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="2" cy="2" r="1" fill="currentColor" />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#dots)" />
      </svg>
    </div>
  )}
  <slot />
</div>
