---
import { getCollection, getEntry } from 'astro:content';
import Search from './Search.astro';

// Load CV data for branding
const cvEntry = await getEntry('cv', 'main');
const personalInfo = cvEntry.data.personalInfo;

// Check if collections have content
const researchItems = await getCollection('research');
const projectItems = await getCollection('projects');
const blogItems = await getCollection('blog', ({ data }) => !data.draft);

const hasResearch = researchItems.length > 0;
const hasProjects = projectItems.length > 0;
const hasBlog = blogItems.length > 0;

// Determine active page based on current URL
const currentPath = Astro.url.pathname;
const isCV = currentPath === '/';
const isResearch = currentPath.startsWith('/research');
const isProjects = currentPath.startsWith('/projects');
const isBlog = currentPath.startsWith('/blog');
---

<nav class="sticky top-0 z-50 bg-slate-900 text-white shadow-lg no-print">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Left: Branding -->
      <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
        <span class="font-playfair text-lg font-bold">{personalInfo.name}</span>
        <span class="text-slate-400">|</span>
        <span class="font-inter text-sm text-slate-300">{personalInfo.title}</span>
      </a>

      <!-- Right: Navigation Links -->
      <div class="hidden md:flex items-center gap-2 ml-auto">
        <a
          href="/"
          class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
            isCV
              ? 'bg-slate-700 text-white shadow-md'
              : 'text-slate-300 hover:bg-slate-800 hover:text-white'
          }`}
          aria-current={isCV ? 'page' : undefined}
        >
          CV
        </a>

        {hasResearch && (
          <a
            href="/research"
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              isResearch
                ? 'bg-slate-700 text-white shadow-md'
                : 'text-slate-300 hover:bg-slate-800 hover:text-white'
            }`}
            aria-current={isResearch ? 'page' : undefined}
          >
            Research
          </a>
        )}

        {hasProjects && (
          <a
            href="/projects"
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              isProjects
                ? 'bg-slate-700 text-white shadow-md'
                : 'text-slate-300 hover:bg-slate-800 hover:text-white'
            }`}
            aria-current={isProjects ? 'page' : undefined}
          >
            Projects
          </a>
        )}

        {hasBlog && (
          <a
            href="/blog"
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              isBlog
                ? 'bg-slate-700 text-white shadow-md'
                : 'text-slate-300 hover:bg-slate-800 hover:text-white'
            }`}
            aria-current={isBlog ? 'page' : undefined}
          >
            Blog
          </a>
        )}
      </div>

      <!-- Far Right: Utility Buttons -->
      <div class="hidden md:flex items-center gap-2 border-l border-slate-700 pl-4 ml-4">
        <!-- Search Button -->
        <Search />

        <!-- Share Button -->
        <button
          id="share-button"
          class="p-2 text-slate-300 hover:bg-slate-800 hover:text-white rounded-md transition-colors"
          aria-label="Share this page"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
          </svg>
        </button>

        <!-- Print Button (only on CV page) -->
        {isCV && (
          <button
            id="print-button"
            class="p-2 text-slate-300 hover:bg-slate-800 hover:text-white rounded-md transition-colors"
            aria-label="Print CV"
            onclick="window.print()"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
          </button>
        )}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-slate-300 hover:bg-slate-800 hover:text-white rounded-md transition-colors"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <!-- Hamburger Icon -->
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <!-- Close Icon -->
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-slate-700 mt-2 pt-4 transition-all duration-200">
      <div class="flex flex-col gap-2">
        <!-- Navigation Links -->
        <a
          href="/"
          class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
            isCV
              ? 'bg-slate-700 text-white shadow-md'
              : 'text-slate-300 hover:bg-slate-800 hover:text-white'
          }`}
        >
          CV
        </a>

        {hasResearch && (
          <a
            href="/research"
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              isResearch
                ? 'bg-slate-700 text-white shadow-md'
                : 'text-slate-300 hover:bg-slate-800 hover:text-white'
            }`}
          >
            Research
          </a>
        )}

        {hasProjects && (
          <a
            href="/projects"
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              isProjects
                ? 'bg-slate-700 text-white shadow-md'
                : 'text-slate-300 hover:bg-slate-800 hover:text-white'
            }`}
          >
            Projects
          </a>
        )}

        {hasBlog && (
          <a
            href="/blog"
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              isBlog
                ? 'bg-slate-700 text-white shadow-md'
                : 'text-slate-300 hover:bg-slate-800 hover:text-white'
            }`}
          >
            Blog
          </a>
        )}

        <!-- Utility Buttons -->
        <div class="border-t border-slate-700 pt-2 mt-2 flex items-center gap-2">
          <!-- Mobile Search Button -->
          <Search />

          <!-- Mobile Share Button -->
          <button
            id="mobile-share-button"
            class="flex-1 flex items-center justify-center gap-2 px-4 py-2 text-slate-300 hover:bg-slate-800 hover:text-white rounded-md transition-colors"
            aria-label="Share this page"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
            <span class="text-sm font-medium">Share</span>
          </button>

          <!-- Mobile Print Button (only on CV page) -->
          {isCV && (
            <button
              id="mobile-print-button"
              class="flex-1 flex items-center justify-center gap-2 px-4 py-2 text-slate-300 hover:bg-slate-800 hover:text-white rounded-md transition-colors"
              aria-label="Print CV"
              onclick="window.print()"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              <span class="text-sm font-medium">Print</span>
            </button>
          )}
        </div>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  // Share functionality (shared handler)
  function handleShare() {
    const url = window.location.href;
    const title = document.title;

    if (navigator.share) {
      navigator.share({ title, url }).catch((err) => {
        console.log('Share cancelled or failed');
      });
    } else {
      // Fallback: Copy to clipboard
      navigator.clipboard.writeText(url).then(() => {
        alert('Link copied to clipboard!');
      }).catch((err) => {
        console.error('Failed to copy link');
      });
    }
  }

  // Mobile menu toggle handler
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const button = document.getElementById('mobile-menu-button');
    const openIcon = document.getElementById('menu-icon-open');
    const closeIcon = document.getElementById('menu-icon-close');

    if (!menu || !button || !openIcon || !closeIcon) return;

    const isExpanded = button.getAttribute('aria-expanded') === 'true';

    // Toggle menu visibility
    menu.classList.toggle('hidden');

    // Toggle icons
    openIcon.classList.toggle('hidden');
    closeIcon.classList.toggle('hidden');

    // Update aria-expanded
    button.setAttribute('aria-expanded', String(!isExpanded));
  }

  // Initialize all event listeners
  function initializeNavigation() {
    // Desktop share button
    const shareButton = document.getElementById('share-button');
    if (shareButton && !shareButton.dataset.initialized) {
      shareButton.addEventListener('click', handleShare);
      shareButton.dataset.initialized = 'true';
    }

    // Mobile share button
    const mobileShareButton = document.getElementById('mobile-share-button');
    if (mobileShareButton && !mobileShareButton.dataset.initialized) {
      mobileShareButton.addEventListener('click', handleShare);
      mobileShareButton.dataset.initialized = 'true';
    }

    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    if (mobileMenuButton && !mobileMenuButton.dataset.initialized) {
      mobileMenuButton.addEventListener('click', toggleMobileMenu);
      mobileMenuButton.dataset.initialized = 'true';
    }
  }

  // Initialize on DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeNavigation);
  } else {
    initializeNavigation();
  }

  // Re-initialize after view transitions (Astro's page navigation)
  document.addEventListener('astro:page-load', initializeNavigation);
</script>
